pipeline {
  agent any 
  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/DiviPavanKumar/CICD.git'
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
        cd spring-boot-app 
        mvn clean package
        java -jar target/spring-boot-web.jar
        '''
      }
    }
  }
}
